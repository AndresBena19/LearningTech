@{
    var Answers = (Dictionary<string, Dictionary<string, string>>)ViewData["Answers"];
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Bootstrap Blog - B4 Template by Bootstrap Temple</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="all,follow">
    <!-- Bootstrap CSS-->
    <link rel="stylesheet" href="~/Scripts/Dashboard/vendor/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome CSS-->
    <link rel="stylesheet" href="~/Scripts/Dashboard/vendor/font-awesome/css/font-awesome.min.css">
    <!-- Custom icon font-->
    <link rel="stylesheet" href="~/Scripts/Dashboard/css/fontastic.css">
    <!-- Google fonts - Open Sans-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700">
    <!-- Fancybox-->
    <link rel="stylesheet" href="~/Scripts/Dashboard/vendor/fancyapps/fancybox/jquery.fancybox.min.css">
    <!-- theme stylesheet-->
    <link rel="stylesheet" href="~/Scripts/Dashboard/css/style.default.css" id="theme-stylesheet">
    <!-- Custom stylesheet - for your changes-->
    <link rel="stylesheet" href="~/Scripts/Dashboard/css/custom.css">
    <!-- Favicon-->
    <link rel="shortcut icon" href="favicon.png">

    <!-- Vendor Styles -->
    <link href="~/Scripts/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Theme Styles -->
    <link href="~/Scripts/css/style.css" rel="stylesheet" type="text/css" />
    <link href="~/Scripts/css/global/global.css" rel="stylesheet" type="text/css" />


</head>
<header class="navbar-fixed-top s-header js__header-sticky js__header-overlay" style="background:Black">
    <!-- Navbar -->
    <div class="s-header__navbar">

        <div class="s-header__container">
            <div class="s-header__navbar-row">
                <div class="s-header__navbar-row-col">

                    <!-- Logo -->
                    <div class="s-header__logo">

                        <a href="index.html" class="s-header__logo-link">
                            <img class="s-header__logo-img s-header__logo-img-shrink" src="img/logo-dark.png" alt="Megakit Logo">
                            <h1 style="color:white">@Session["ActualCourse"]</h1>
                        </a>
                    </div>
                    <!-- End Logo -->
                </div>
                <div class="s-header__navbar-row-col">
                    <!-- Trigger -->
                    <a href="javascript:void(0);" class="s-header__trigger js__trigger">
                        <h1 style="color:white">@Session["Userchar"]</h1>
                    </a>
                    <!-- End Trigger -->
                </div>
            </div>
        </div>
    </div>
    <!-- End Navbar -->
    <!-- Overlay -->


    <div class="s-header-bg-overlay js__bg-overlay">

        <!-- Nav -->
        <nav class="s-header__nav js__scrollbar">

            <div class="container-fluid">
                <!-- Menu List -->
                <ul class="list-unstyled s-header__nav-menu">
                    <li class="s-header__nav-menu-item"><a class="s-header__nav-menu-link s-header__nav-menu-link-divider" style="color:white" onclick="location.href='@Url.Action("Courses", "Home")'">Other Courses</a></li>
                    <li class="s-header__nav-menu-item"><a class="s-header__nav-menu-link s-header__nav-menu-link-divider" style="color:white" onclick="location.href='@Url.Action("MyCourses", "Home")'">My Courses</a></li>
                    <li class="s-header__nav-menu-item"><a class="s-header__nav-menu-link s-header__nav-menu-link-divider" style="color:white" onclick="location.href='@Url.Action("Index", "Home")'">Log out</a></li>

                </ul>

            </div>
        </nav>
        <!-- End Nav -->
        <!-- Action -->
        <ul class="list-inline s-header__action s-header__action--lb">
            <li class="s-header__action-item"><a class="s-header__action-link -is-active" href="#">En</a></li>
            <li class="s-header__action-item"><a class="s-header__action-link" href="#">Fr</a></li>
        </ul>
        <!-- End Action -->

    </div>
    <!-- End Overlay -->
</header>

<hr>
<hr>
<hr>

<body>

    <div class="container">
        <div class="row">
            <!-- Latest Posts -->
            <main class="post blog-post col-lg-6">
                <div class="container">
                    <div class="post-single">
                        <div class="post-details">
                            <div class="post-meta d-flex justify-content-between">
                                <div class="category"><a href="#">Business</a><a href="#">Financial</a></div>
                            </div>
                            <h1>Diversity in Engineering: The Effect on Questions<a href="#"><i class="fa fa-bookmark-o"></i></a></h1>
                            <div class="post-footer d-flex align-items-center flex-column flex-sm-row">
                                <a href="#" class="author d-flex align-items-center flex-wrap">
                                    <div class="avatar"><img src="~/Scripts/Dashboard/img/avatar-1.jpg" alt="..." class="img-fluid"></div>
                                    <div class="title"><span>@ViewData["Owner"]</span></div>
                                </a>
                                <div class="d-flex align-items-center flex-wrap">
                                    <div class="date"><i class="icon-clock"></i> 2 months ago</div>
                                    <div class="views"><i class="icon-eye"></i> 500</div>
                                    <div class="comments meta-last"><i class="icon-comment"></i>12</div>
                                </div>
                            </div>
                            <div class="post-body">
                                @ViewData["Query"]
                            </div>
                            <div class="post-tags"><a href="#" class="tag">#Business</a><a href="#" class="tag">#Tricks</a><a href="#" class="tag">#Financial</a><a href="#" class="tag">#Economy</a></div>
                            <div class="posts-nav d-flex justify-content-between align-items-stretch flex-column flex-md-row">
                                <a href="#" class="prev-post text-left d-flex align-items-center">
                                    <div class="icon prev"><i class="fa fa-angle-left"></i></div>
                                    <div class="text">
                                        <strong class="text-primary">Previous Post </strong>
                                        <h6>I Bought a Wedding Dress.</h6>
                                    </div>
                                </a><a href="#" class="next-post text-right d-flex align-items-center justify-content-end">
                                    <div class="text">
                                        <strong class="text-primary">Next Post </strong>
                                        <h6>I Bought a Wedding Dress.</h6>
                                    </div>
                                    <div class="icon next"><i class="fa fa-angle-right">   </i></div>
                                </a>
                            </div>
                            <div class="post-comments">
                                <header>
                                    <h3 class="h6">Post Comments<span class="no-of-comments">(3)</span></h3>
                                </header>

                                @foreach (var answer in Answers) { 

                                        <div class="comment">
                                            <div class="comment-header d-flex justify-content-between">
                                                <div class="user d-flex align-items-center">
                                                    <div class="image"><img src="~/Scripts/Dashboard/img/user.svg" alt="..." class="img-fluid rounded-circle"></div>
                                                    <div class="title"><strong>@answer.Value.ToList()[1].Value</strong><span class="date">May 2016</span></div>
                                                </div>
                                            </div>
                                            <div class="comment-body">
                                                <p>@answer.Value.ToList()[0].Value</p>
                                            </div>
                                        </div>
                                    }
                            </div>
                            <div class="add-comment">
                                <header>
                                    <h3 class="h6">Leave a reply</h3>
                                </header>
                                @using (Html.BeginForm("MakeAnswer", "Dashboard", FormMethod.Post))
                           {
                            <form action="#" class="commenting-form">
                                <div class="row">

                                    <div class="form-group col-md-12">
                                        <textarea name="usercomment" id="usercomment" placeholder="Type your comment" class="form-control"></textarea>
                                    </div>
                                    <div class="form-group col-md-12">
                                        <button type="submit" class="btn btn-secondary">Submit Comment</button>
                                    </div>
                                </div>
                            </form>
                            }
                            </div>
                        </div>
                    </div>
                </div>
            </main>

        </div>
    </div>
    <!-- Page Footer-->
    <footer class="main-footer">
      
        
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <p>&copy; 2017. All rights reserved. Your great site.</p>
                    </div>
                    <div class="col-md-6 text-right">
                        <p>
                            Template By <a href="https://bootstraptemple.com" class="text-white">Carreo seguro</a>
                        </p>
                    </div>
                </div>
            </div>
     
    </footer>
    <!-- JavaScript files-->
    <script src="~/Scripts/Dashboard/vendor/jquery/jquery.min.js"></script>
    <script src="~/Scripts/Dashboard/vendor/popper.js/umd/popper.min.js"></script>
    <script src="~/Scripts/Dashboard/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Scripts/Dashboard/vendor/jquery.cookie/jquery.cookie.js"></script>
    <script src="~/Scripts/Dashboard/vendor/fancyapps/fancybox/jquery.fancybox.min.js"></script>
    <script src="~/Scripts/Dashboard/js/front.js"></script>

    <!-- Back To Top -->
    <a href="javascript:void(0);" class="s-back-to-top js__back-to-top"></a>
    <!--========== JAVASCRIPTS (Load javascripts at bottom, this will reduce page load time) ==========-->
    <!-- Vendor -->
    <script type="text/javascript" src="~/Scripts/vendor/jquery.min.js"></script>
    <script type="text/javascript" src="~/Scripts/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!-- General Components and Settings -->
    <script type="text/javascript" src="~/Scripts/js/global.min.js"></script>


</body>
</html>
